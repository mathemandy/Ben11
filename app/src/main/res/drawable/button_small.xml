<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/grey_button" />
            <stroke android:dashGap="20dp" android:color="@color/grey_button"/>
            <corners android:radius="4dp" />
            <padding android:right="20dp"/>

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/grey_button"
                android:endColor="@color/grey_button"
                android:angle="270" />

            <corners android:radius="10dp" />

            <padding android:right="20dp"/>
        </shape>
    </item>
</selector>