<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Ben11_transparent_splash_green</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MaterialButton.BaseRounded" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/BaseShapeAppearance</item>
    </style>

    <style name="MaterialButton.UnElevatedStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/BaseShapeAppearance</item>
    </style>

    <style name="MaterialButton.BaseStyle" parent="MaterialButton.BaseRounded">
        <item name="backgroundTint">@android:color/holo_blue_dark</item>
    </style>

    <style name="Ben11.TextAppearance.CollapsingToolbar.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">#2779F6</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">@dimen/headline_text_size</item>
    </style>

    <style name="Ben11.TextAppearance.CollapsingToolbar.Collapsed" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textColor">#2779F6</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/sub_headline_text_size</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">@dimen/sub_headline_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="BaseShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="login_edittext">
        <item name="android:background">@drawable/round_background_currency</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColorHint">@color/white_trans</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Ben11CoreTextInputLayout.DropDown" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>